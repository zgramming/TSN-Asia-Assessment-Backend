{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "baseUrl": "./src",
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@config/*": ["./src/config/*"],
      "@models/*" :["./src/models/*"],
      "@services/*":["./src/services/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@utils/*": ["./src/utils/*"],
      "@routes/*": ["./src/routes/*"],
    }
  },
  // "include": ["./src/**/*"],
  // "exclude": ["./node_modules", "./dist"]
}
